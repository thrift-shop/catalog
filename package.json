{
  "name": "@thrift-shop/catalog",
  "version": "0.0.1",
  "description": "Maintains the list of available products and prices",
  "main": "dist/server.js",
  "scripts": {
    "clean": "rimraf coverage/ dist/ node_modules/",
    "clean-dist": "rimraf dist/",
    "clean-codegen": "rimraf src/codegen/",
    "prebuild": "npm run clean-dist && npm run codegen",
    "build": "npm run lint && tsc",
    "lint": "tslint --fix src/**/*.ts",
    "precodegen": "npm run clean-codegen",
    "codegen": "thrift-typescript --target thrift-server --rootDir . --sourceDir ./thrift --outDir ./src/codegen",
    "postinstall": "npm run codegen",
    "start": "npm run build && node ./dist/server.js",
    "pretest": "npm run build",
    "test": "lab --coverage --coverage-path ./dist --sourcemaps --timeout 15000 --verbose -l -S -P spec ./dist/test",
    "test:watch": "watch 'npm test' ./src",
    "coverage": "lab --coverage --sourcemaps -r console -o stdout -r html -o ./coverage/coverage.html ./dist/test",
    "release:patch": "npm version patch && npm run release:publish",
    "release:minor": "npm version minor && npm run release:publish",
    "release:major": "npm version major && npm run release:publish",
    "release:publish": "npm publish && git push --follow-tags"
  },
  "keywords": [
    "thrift"
  ],
  "author": "Nick Nance",
  "license": "ISC",
  "devDependencies": {
    "@creditkarma/thrift-client": "^0.3.6",
    "@creditkarma/thrift-typescript": "1.0.3",
    "@types/code": "^4.0.3",
    "@types/hapi": "^16.1.10",
    "@types/lab": "^11.1.0",
    "@types/node": "^8.0.31",
    "@types/request": "^2.0.11",
    "@types/rimraf": "^2.0.2",
    "lab": "^14.3.1",
    "lab-transform-typescript": "^3.0.1",
    "request": "^2.83.0",
    "rimraf": "^2.6.2",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "@creditkarma/thrift-server-core": "^0.3.6",
    "@creditkarma/thrift-server-hapi": "0.3.6",
    "hapi": "^16.6.2"
  }
}
